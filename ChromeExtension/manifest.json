
{
  "name": "Train Notifier",
  "version": "1.0",
  "description": "Shows notifications for trains",
  "background": { "scripts": ["jquery-2.0.3.min.js", "webApi.js", "background.js"] },
  "page_action" :
  {
    "default_icon" : "icon-19.png",
    "default_title" : "Subscribe to updates",
	"default_popup": "popup.html"
  },
  "permissions" : [
    "tabs",
	"notifications"
  ],
  "web_accessible_resources": [
    "icon-48.png"
  ],
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "manifest_version": 2
}
