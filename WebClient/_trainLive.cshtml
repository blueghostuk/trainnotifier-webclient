<table class="table table-hover table-bordered table-header-colour" id="tableView">
    <thead>
        <tr>
            <th>Location</th>
            <th title="Expected WTT time is tooltip. Delay is shown next to time">Arrive</th>
            <th title="Expected WTT time is tooltip. Delay is shown next to time">Depart</th>
            <th class="phone-hide">Line</th>
            <th>Platform</th>
            <th class="phone-hide">Notes</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: $data">
        <tr data-bind="css: { info: offRoute, pass: berthUpdate }">
            <td class="stationName">
                <a class="pointer" data-bind="text: location, click: function (d, e) { listStation(d.locationStanox); }"></a>
            </td>
            <td>
                <span data-bind="text: actualArrival, attr: { title: plannedArrival }" class="tooltip-dynamic"></span>&nbsp;
                <span class="badge" data-bind="text: arrivalDelay, css: arrivalDelayCss"></span></td>
            <td>
                <span data-bind="text: actualDeparture, attr: { title: plannedDeparture }" class="tooltip-dynamic"></span>&nbsp;
                <span class="badge" data-bind="text: departureDelay, css: departureDelayCss"></span></td>
            <td class="phone-hide" data-bind="text: line"></td>
            <td data-bind="text: platform"></td>
            <td class="phone-hide">
                <span data-bind="visible: nextLocation">Next @@ <span data-bind="text: nextLocation" class="stationName"></span> in <span data-bind="text: nextAt"></span></span>
            </td>
        </tr>
    </tbody>
</table>