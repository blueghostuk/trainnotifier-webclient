<div class="span4">
    <h5>Service Details</h5>
    <ul>
        <li>Operator: <span data-bind="text: AtocCode.Name" style="display: inline;"></span></li>
    </ul>
</div>
<div class="span4">
    <h5>Schedule Details</h5>
    <ul>
        <li data-bind="text: STPValue"></li>
        <li>From: <span data-bind="text: StartDateValue"></span></li>
        <li>To: <span data-bind="text: EndDateValue"></span></li>
    </ul>
</div>
<div class="span4">
    <h5>Schedule Details</h5>
    <ul>
        <li data-bind="text: Runs"></li>
    </ul>
</div>
<table class="table table-hover table-bordered" id="scheduleView">
    <thead>
        <tr>
            <th>Location</th>
            <th>Arrive</th>
            <th>Pass</th>
            <th>Depart</th>
            <th>Line</th>
            <th>Platform</th>
            <th>Allowances</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Stops">
        <tr data-bind="css: Tiploc.Stanox, attr: { title: Tiploc.Description }">
            <td><a class="pointer" data-bind="text: Tiploc.Description, css: Tiploc.Stanox, click: function(d,e) { listStation(d.Tiploc.Stanox()); }"></a></td>
            <td data-bind="text: PublicArrival"></td>
            <td data-bind="text: Pass"></td>
            <td data-bind="text: PublicDeparture"></td>
            <td data-bind="text: Line"></td>
            <td data-bind="text: Platform"></td>
            <td>
                <span title="Engineering Allowance" data-bind="visible: EngineeringAllowance()">E:<span data-bind="text: EngineeringAllowance"></span>,</span>
                <span title="Pathing Allowance" data-bind="visible: PathingAllowance()">Pa:<span data-bind="    text: PathingAllowance"></span>,</span>
                <span title="Performance Allowance" data-bind="visible: PerformanceAllowance()">Pe:<span data-bind="    text: PerformanceAllowance"></span></span>
            </td>
        </tr>
    </tbody>
</table>