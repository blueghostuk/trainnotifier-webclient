<div class="span4">
    <h5>Service Details</h5>
    <ul>
        <li><span class="label label-info">Operator:</span> <span data-bind="text: AtocCode.Name" style="display: inline;"></span></li>
    </ul>
</div>
<div class="span4">
    <h5>Schedule Details</h5>
    <ul>
        <li><span class="label label-info">Type:</span> <span data-bind="text: STPValue"></span></li>
        <li><span class="label label-info">From:</span> <span data-bind="text: StartDateValue"></span></li>
        <li><span class="label label-info">To:</span> <span data-bind="text: EndDateValue"></span></li>
    </ul>
</div>
<div class="span4">
    <h5>Schedule Details</h5>
    <ul>
        <li><span class="label label-info">Runs:</span> <span data-bind="text: Runs"></span></li>
        <!-- ko foreach: Associations -->
        <li><span class="label label-info" data-bind="text: Title"></span> <a data-bind="text: Train, attr: { href: 'train#getuid:' + ViewCommand(), onclick: 'setCommand(\'getuid:' + ViewCommand() + '\');parseCommand();' }"></a> @@ <span data-bind="text: Location.Description()"></span></li>
        <!-- /ko -->
    </ul>
</div>
<table class="table table-hover table-bordered table-header-colour" id="scheduleView">
    <thead>
        <tr class="phone-hide">
            <th>&nbsp;</th>
            <th colspan="2">Arrive</th>
            <th colspan="2">Depart</th>
            <th colspan="3"></th>
        </tr>
        <tr>
            <th>Location</th>
            <th class="phone-hide">WTT</th>
            <th class="phone-hide">Public</th>
            <th class="phone-show">Arrive</th>
            <th class="phone-hide">WTT</th>
            <th class="phone-hide">Public</th>
            <th class="phone-show">Depart</th>
            <th class="phone-hide">Line</th>
            <th>Platform</th>
            <th class="phone-hide">Allowances</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Stops">
        <tr data-bind="css: { pass : Pass }">
            <td class="stationName"><a class="pointer" data-bind="text: Tiploc.Description, click: function(d,e) { listStation(d.Tiploc.Stanox()); }"></a></td>
            <td class="phone-hide" data-bind="text: Pass ? 'Pass' : Arrival, attr: { colspan: Pass ? 2 : 0 }"></td>
            <td class="phone-hide" data-bind="text: Pass ? 'Pass' : PublicArrival, visible: !Pass"></td>
            <td class="phone-show" data-bind="text: PublicArrival, visible: !Pass"></td>
            <td class="phone-show" data-bind="visible: Pass">Pass</td>
            <td class="phone-hide" data-bind="text: Pass ? Pass : Departure"></td>
            <td class="phone-hide" data-bind="text: PublicDeparture"></td>
            <td class="phone-show" data-bind="text: Pass ? Pass : PublicDeparture"></td>
            <td class="phone-hide" data-bind="text: Line"></td>
            <td data-bind="text: Platform"></td>
            <td class="phone-hide">
                <span title="Engineering Allowance" data-bind="visible: EngineeringAllowance">E:<span data-bind="text: EngineeringAllowance"></span>,</span>
                <span title="Pathing Allowance" data-bind="visible: PathingAllowance">Pa:<span data-bind="text: PathingAllowance"></span>,</span>
                <span title="Performance Allowance" data-bind="visible: PerformanceAllowance">Pe:<span data-bind="text: PerformanceAllowance"></span></span>
            </td>
        </tr>
    </tbody>
</table>