<table class="table table-hover table-bordered table-header-colour" id="mixView">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th class="phone-hide" colspan="3">Arrive</th>
            <th class="phone-show" colspan="2">Arrive</th>
            <th class="phone-hide" colspan="3">Depart</th>
            <th class="phone-show" colspan="2">Depart</th>
            <th class="phone-hide" colspan="3"></th>
            <th class="phone-show"></th>
        </tr>
        <tr>
            <th>Location</th>
            <th class="phone-hide">WTT</th>
            <th>Expected</th>
            <th>Actual</th>
            <th class="phone-hide">WTT</th>
            <th>Expected</th>
            <th>Actual</th>
            <th class="phone-hide">Line</th>
            <th>Platform</th>
            <th class="phone-hide">Allowances</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Stops">
        <tr data-bind="css: { pass: Pass }">
            <td class="stationName"><a class="pointer" data-bind="text: Tiploc.Description, click: function (d, e) { listStation(d.Tiploc.Stanox()); }"></a></td>
            <td class="phone-hide" data-bind="text: Pass ? 'Pass' : Arrival, attr: { colspan: Pass ? 3 : 0 }"></td>
            <td class="phone-show" colspan="2" data-bind="visible: Pass">Pass</td>
            <td data-bind="text: PublicArrival, visible: !Pass"></td>
            <td data-bind="text: ActualArrival, visible: !Pass"></td>
            <td class="phone-hide" data-bind="text: Pass ? Pass : Departure"></td>
            <td class="phone-show" data-bind="text: Pass ? Pass : Departure, visible: Pass"></td>
            <td class="phone-hide" data-bind="text: PublicDeparture"></td>
            <td class="phone-show" data-bind="text: PublicDeparture, visible: !Pass"></td>
            <td data-bind="text: ActualDeparture"></td>
            <td class="phone-hide" data-bind="text: Line"></td>
            <td data-bind="text: Platform"></td>
            <td class="phone-hide">
                <span title="Engineering Allowance" data-bind="visible: EngineeringAllowance">E:<span data-bind="text: EngineeringAllowance"></span>,</span>
                <span title="Pathing Allowance" data-bind="visible: PathingAllowance">Pa:<span data-bind="text: PathingAllowance"></span>,</span>
                <span title="Performance Allowance" data-bind="visible: PerformanceAllowance">Pe:<span data-bind="text: PerformanceAllowance"></span></span>
            </td>
        </tr>
    </tbody>
</table>
