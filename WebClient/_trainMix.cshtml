<div class="span4">
    <h5>Schedule Details</h5>
    <ul>
        <li><span class="label label-info">Operator:</span> <span data-bind="text: AtocCode.Name" style="display: inline;"></span></li>
        <li class="phone-hide"><span class="label label-info">Runs:</span> <span data-bind="text: Runs"></span></li>
        <li class="phone-hide"><span class="label label-info">Type:</span> <span data-bind="text: STPValue"></span></li>
    </ul>
</div>
<div class="span4">
    <h5>Live Details</h5>
    <ul>
        <li><span class="label label-info">Live Id:</span> <a onclick="loadTrainSub(this);" data-bind="text: Id, attr: {href :'#subtrain:' + Id()}" title="View Live Updates for this train" style="display: inline;"></a></li>
        <li><span class="label label-info">Id:</span> <span data-bind="text: Headcode"></span></li>
        <li data-bind="visible: Cancellation" style="display: none;"><span class="label label-important">Cancelled:</span> <span data-bind="text: Cancellation"></span></li>
        <li data-bind="visible: ChangeOfOrigin" style="display: none;"><span class="label label-important">Will start from:</span> <span data-bind="text: ChangeOfOrigin"></span></li>
        <li data-bind="visible: Reinstatement" style="display: none;"><span class="label label-important">Reinstated:</span> <span data-bind="text: Reinstatement"></span></li>
    </ul>
</div>
<div class="span4 phone-hide">
    <h5>Updates</h5>
    <ul>
        <li><span class="label label-info">Activated:</span> <span data-bind="text: Activated"></span></li>
        <li><span class="label label-info">Last Update:</span> <span data-bind="text: LastUpdate" id="lastUpdate"></span></li>
    </ul>
</div>
<div class="span4 phone-show">
    <ul class="nav nav-list">
        <li class="nav-header" data-bind="text: CurrentLocation.toDisplay()">Station Details</li>
        <li><strong>CRS:</strong><span data-bind="text: CurrentLocation.locationCRS"></span></li>
        <li><a data-bind="attr: { href :'search-schedule#listorigin/' + CurrentLocation.locationStanox() }" title="View Trains Starting from this station">Trains Starting From</a></li>
        <li><a data-bind="attr: { href :'search-schedule#liststation/' + CurrentLocation.locationStanox() }" title="View Trains Calling at this station">Trains Calling At</a></li>
        <li><a data-bind="attr: { href :'search-schedule#listdest/' + CurrentLocation.locationStanox() }" title="View Trains Terminating at this station">Trains Terminating At</a></li>
    </ul>
</div>
<table class="table table-hover table-bordered table-header-colour" id="mixView">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th class="phone-hide" colspan="3">Arrive</th>
            <th class="phone-show" colspan="2">Arrive</th>
            <th class="phone-hide" colspan="3">Depart</th>
            <th class="phone-show" colspan="2">Depart</th>
            <th class="phone-hide" colspan="3"></th>
            <th class="phone-show"></th>
        </tr>
        <tr>
            <th>Location</th>
            <th class="phone-hide">WTT</th>
            <th>Expected</th>
            <th>Actual</th>
            <th class="phone-hide">WTT</th>
            <th>Expected</th>
            <th>Actual</th>
            <th class="phone-hide">Line</th>
            <th>Platform</th>
            <th class="phone-hide">Allowances</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Stops">
        <tr data-bind="css: { pass: Pass }">
            <td class="stationName"><a class="pointer" data-bind="text: Tiploc.Description, click: function (d, e) { listStation(d.Tiploc.Stanox()); }"></a></td>
            <td class="phone-hide" data-bind="text: Pass ? 'Pass' : Arrival, attr: { colspan: Pass ? 3 : 0 }"></td>
            <td class="phone-show" colspan="2" data-bind="visible: Pass">Pass</td>
            <td data-bind="text: PublicArrival, visible: !Pass"></td>
            <td data-bind="text: ActualArrival, visible: !Pass"></td>
            <td class="phone-hide" data-bind="text: Pass ? Pass : Departure"></td>
            <td class="phone-show" data-bind="text: Pass ? Pass : Departure, visible: Pass"></td>
            <td class="phone-hide" data-bind="text: PublicDeparture"></td>
            <td class="phone-show" data-bind="text: PublicDeparture, visible: !Pass"></td>
            <td data-bind="text: ActualDeparture"></td>
            <td class="phone-hide" data-bind="text: Line"></td>
            <td data-bind="text: Platform"></td>
            <td class="phone-hide">
                <span title="Engineering Allowance" data-bind="visible: EngineeringAllowance">E:<span data-bind="text: EngineeringAllowance"></span>,</span>
                <span title="Pathing Allowance" data-bind="visible: PathingAllowance">Pa:<span data-bind="text: PathingAllowance"></span>,</span>
                <span title="Performance Allowance" data-bind="visible: PerformanceAllowance">Pe:<span data-bind="text: PerformanceAllowance"></span></span>
            </td>
        </tr>
    </tbody>
</table>
