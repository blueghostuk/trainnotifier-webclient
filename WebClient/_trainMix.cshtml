<div class="span4">
    <h5>Schedule Details</h5>
    <ul>
        <li><span class="label label-info">Operator:</span> <span data-bind="text: AtocCode.Name" style="display: inline;"></span></li>
        <li><span class="label label-info">Runs:</span> <span data-bind="text: Runs"></span></li>
    </ul>
</div>
<div class="span4">
    <h5>Live Details</h5>
    <ul>
        <li><span class="label label-info">Live Id:</span> <a onclick="loadTrainSub(this);" data-bind="text: Id, attr: {href :'#subtrain:' + Id()}" title="View Live Updates for this train" style="display: inline;"></a></li>
        <li><span class="label label-info">Id:</span> <span data-bind="text: Headcode"></span></li>
    </ul>
</div>
<div class="span4">
    <h5>Updates</h5>
    <ul>
        <li><span class="label label-info">Activated:</span> <span data-bind="text: Activated"></span></li>
        <li><span class="label label-info">Last Update:</span> <span data-bind="text: LastUpdate" id="lastUpdate"></span></li>
    </ul>
</div>
<table class="table table-hover table-bordered table-header-colour" id="mixView">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th colspan="2">WTT</th>
            <th colspan="2">Public</th>
            <th colspan="2">Actual</th>
            <th colspan="3"></th>
        </tr>
        <tr>
            <th>Location</th>
            <th>Arrive</th>
            <th>Depart</th>
            <th>Arrive</th>
            <th>Depart</th>
            <th>Arrive</th>
            <th>Depart</th>
            <th>Line</th>
            <th>Platform</th>
            <th>Allowances</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: Stops">
        <tr data-bind="css: { pass: Pass }">
            <td><a class="pointer" data-bind="text: Tiploc.Description, css: Tiploc.Stanox, click: function (d, e) { listStation(d.Tiploc.Stanox()); }"></a></td>
            <td data-bind="text: Pass() ? 'Pass' : Arrival"></td>
            <td data-bind="text: Pass() ? Pass : Departure"></td>
            <td data-bind="text: PublicArrival"></td>
            <td data-bind="text: PublicDeparture"></td>
            <td data-bind="text: ActualArrival"></td>
            <td data-bind="text: ActualDeparture"></td>
            <td data-bind="text: Line"></td>
            <td data-bind="text: Platform"></td>
            <td>
                <span title="Engineering Allowance" data-bind="visible: EngineeringAllowance()">E:<span data-bind="    text: EngineeringAllowance"></span>,</span>
                <span title="Pathing Allowance" data-bind="visible: PathingAllowance()">Pa:<span data-bind="    text: PathingAllowance"></span>,</span>
                <span title="Performance Allowance" data-bind="visible: PerformanceAllowance()">Pe:<span data-bind="    text: PerformanceAllowance"></span></span>
            </td>
        </tr>
    </tbody>
</table>
